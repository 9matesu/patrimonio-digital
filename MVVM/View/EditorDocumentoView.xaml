<Window x:Class="patrimonio_digital.MVVM.View.EditorDocumentoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:patrimonio_digital.MVVM.View"
        xmlns:vm="clr-namespace:patrimonio_digital.MVVM.ViewModel"
        Title="Editor de Documento"
        Width="500" Height="600"
        Background="#121212"
        WindowStartupLocation="CenterScreen">

    <DockPanel Background="#121212">

        <StackPanel Orientation="Horizontal" Margin="10 5 0 0" DockPanel.Dock="Top">
            <Button Content="&lt;" Command="{Binding AnteriorCommand}" Style="{StaticResource EditorButtonTheme}" Margin="2"/>
            <Button Content="&gt;" Command="{Binding ProximaCommand}" Style="{StaticResource EditorButtonTheme}" Margin="2"/>
            <Button Content="Salvar Tudo" Command="{Binding FecharCommand}" Style="{StaticResource EditorButtonTheme}" Margin="2"/>

            <TextBlock Foreground="White"
                       Text="{Binding PaginaAtual.Numero}"
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"/>
        </StackPanel>

        <Border Background="#3f3f3f" CornerRadius="20" Margin="10">
            <TextBox Text="{Binding PaginaAtual.Conteudo, UpdateSourceTrigger=PropertyChanged}"
                     Background="#3f3f3f"
                     Foreground="White"
                     AcceptsReturn="True"
                     AcceptsTab="True"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     FontSize="14"
                     BorderBrush="#3f3f3f"
                     Margin="10"/>
        </Border>

    </DockPanel>
</Window>
