<Window x:Class="patrimonio_digital.MVVM.View.EditorDocumentoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editor de Documento" Height="500" Width="800">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="5">
            <Button x:Name="AnteriorButton" Content="Anterior" Margin="2"/>
            <Button x:Name="SalvarButton" Content="Salvar" Margin="2"/>
            <Button x:Name="ProximaButton" Content="Próxima" Margin="2"/>
            <TextBlock Text="{Binding Pagina}" Margin="10,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <RichTextBox x:Name="EditorRTF"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     FontSize="14"/>
    </DockPanel>
</Window>
