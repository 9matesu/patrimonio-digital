<Window x:Class="patrimonio_digital.MVVM.View.CadastroUsuarioWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cadastro de Usuário"
        Width="320"
        Height="300"
        WindowStartupLocation="CenterScreen"
        Background="#0b508c"
        ResizeMode="NoResize">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="260">

        <TextBlock Text="Cadastro de Usuário"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,18" />

        <TextBox x:Name="txtNome"
                 Height="28"
                 Margin="0,0,0,10"
                 Width="250"
                 />

        <PasswordBox x:Name="txtSenha"
                     Height="28"
                     Margin="0,0,0,10"
                     Width="250"
                     />

        <ComboBox x:Name="cmbTipo"
                  Height="28"
                  Margin="0,0,0,18"
                  Width="250"
                  />

        <Button Content="Criar Usuário"
                Width="120"
                Height="32"
                Margin="0,6,0,0"
                HorizontalAlignment="Center"
                Click="BtnCriarUsuario_Click"
                />

    </StackPanel>
</Window>
