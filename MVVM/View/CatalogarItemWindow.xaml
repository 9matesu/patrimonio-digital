<Window x:Class="patrimonio_digital.MVVM.View.CatalogarItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:patrimonio_digital.MVVM.View"
        xmlns:vm="clr-namespace:patrimonio_digital.MVVM.ViewModel"
        mc:Ignorable="d"
        Title="Adicionar item" Height="640" Width="250"
        Background="#121212"
        WindowStartupLocation="CenterScreen" ShowInTaskbar="True" ResizeMode="CanMinimize" SizeToContent="WidthAndHeight">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>


    
    <Border Background="#121212" CornerRadius="0,0,20,20">

        <Grid Margin="10 10 10 10">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0">
                <Label Foreground="White" FontSize="18" VerticalAlignment="Center" Content="Registro de Itens"></Label>

            </StackPanel>
            <!-- <StackPanel Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2">
                <Button Content="" Command="{Binding FecharJanelaCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Template="{StaticResource ExitButton}" Width="25" Height="25" HorizontalAlignment="Right"></Button>
            </StackPanel> -->

            <StackPanel HorizontalAlignment="Center" Grid.Row="1" Margin="0,0,0,0" Width="230">
                <Label Foreground="White" Content="Título" FontSize="15" FontFamily="{StaticResource OpenSans}"/>
                <TextBox Style="{StaticResource TextBoxTheme}" Text="{Binding NomeNovoItem, UpdateSourceTrigger=PropertyChanged}" Height="40"/>


                <Label Foreground="White" Content="Autoria" FontSize="15" FontFamily="{StaticResource OpenSans}"/>
                <TextBox Style="{StaticResource TextBoxTheme}" Text="{Binding AutorNovoItem, UpdateSourceTrigger=PropertyChanged}" Height="40"/>

                <Label Foreground="White" Content="Data" FontSize="15" FontFamily="{StaticResource OpenSans}"/>
                <TextBox Style="{StaticResource TextBoxTheme}" Text="{Binding DataNovoItem, UpdateSourceTrigger=PropertyChanged}" Height="40"/>

                <Label Foreground="White" Content="Origem" FontSize="15" FontFamily="{StaticResource OpenSans}"/>
                <TextBox Style="{StaticResource TextBoxTheme}" Text="{Binding OrigemNovoItem, UpdateSourceTrigger=PropertyChanged}" Height="40"/>
                
                <Label Foreground="White" Content="Tipo" FontSize="15" FontFamily="{StaticResource OpenSans}"/>
                <ComboBox Background="#3f3f3f" ItemsSource="{Binding Tipo}" SelectedItem="{Binding TipoNovoItem, Mode=TwoWay}" Height="40"/>

                <Label Foreground="White" Content="Estado de Conservação" FontSize="15" FontFamily="{StaticResource OpenSans}"/>
                <ComboBox Foreground="#3f3f3f" ItemsSource="{Binding EstadoCons}" SelectedItem="{Binding EstadoConsNovoItem, Mode=TwoWay}" Height="40"/>

                <Label Foreground="White" Content="Setor Físico" FontSize="15" FontFamily="{StaticResource OpenSans}"/>
                <TextBox Style="{StaticResource TextBoxTheme}" Text="{Binding SetorFisicoNovoItem, UpdateSourceTrigger=PropertyChanged}" Height="40"/>

                <Button Content="Registrar" Foreground= "White" Background="#3f3f3f" Width="Auto" Height="50" Margin="0 20 0 0"
                Command="{Binding RegistrarCommand}"/>
                        
            </StackPanel>



        </Grid>

    </Border>
</Window>
