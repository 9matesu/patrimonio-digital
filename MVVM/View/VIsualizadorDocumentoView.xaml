<Window x:Class="patrimonio_digital.MVVM.View.VisualizadorDocumentoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Visualizador de Documento"
        Height="600" Width="800">

    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="{Binding PaginaAtual.Numero, StringFormat='Pagina {0}'}" FontWeight="Bold" FontSize="16" Margin="0 0 0 10"/>
            <TextBox Text="{Binding PaginaAtual.Conteudo}" IsReadOnly="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" Height="400"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10 0 0">
                <Button Content="Anterior" Command="{Binding AnteriorCommand}" Margin="5"/>
                <Button Content="Proxima" Command="{Binding ProximaCommand}" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>