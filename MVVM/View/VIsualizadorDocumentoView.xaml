<Window x:Class="patrimonio_digital.MVVM.View.VisualizadorDocumentoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Visualizador de Documento"
        Height="Auto" Width="800"
        Background="{DynamicResource WindowBackgroundBrush}"
        FontFamily="{StaticResource Inter}"
        Icon="/digipat.ico">

    <Grid Margin="10">
        <StackPanel VerticalAlignment="Top">

            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="10">
                <Path Data="M16.0607 3H5.25V21H18.75V5.68934L16.0607 3ZM6.75 19.5V4.5H15.4393L17.25 6.31066V19.5H6.75ZM8.25 9.75H15.75V8.25H8.25V9.75ZM8.25 12.75H15.75V11.25H8.25V12.75ZM12 15.75H8.25V14.25H12V15.75Z"
                        Fill="{DynamicResource ForegroundBrush}"
                        Stretch="Uniform"
                        Width="15"
                        Height="15"
                        Margin="10"/>
                <Label Foreground="{DynamicResource ForegroundBrush}" FontSize="18" VerticalAlignment="Center" Content="Visualizador de Documento"></Label>
                
                <TextBlock Text="{Binding PaginaAtual.Numero, StringFormat='Pagina {0}'}"
                 FontWeight="Bold"
                 FontSize="16"
                 Foreground="{DynamicResource ForegroundBrush}"
                 Margin="10"/>
        
            </StackPanel>
            

            <TextBox Text="{Binding PaginaAtual.Conteudo}"
                     Style="{StaticResource TextBoxTheme}"
                     IsReadOnly="True"
                     VerticalScrollBarVisibility="Auto"
                     TextWrapping="Wrap"
                     Height="400"
                     Margin="10"
                     HorizontalContentAlignment="Left"
                     VerticalContentAlignment="Top"/>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0 10 0 0">

                <Button Content="Anterior"
                        Command="{Binding AnteriorCommand}"
                        Style="{StaticResource EditorButtonTheme}"
                        Margin="5"/>

                <Button Content="Proxima"
                        Command="{Binding ProximaCommand}"
                        Style="{StaticResource EditorButtonTheme}"
                        Margin="5"/>

            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
