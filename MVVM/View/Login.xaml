<Window x:Class="patrimonio_digital.MVVM.View.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login"
        Height="320" Width="350"
		MinWidth="300" MinHeight="220"
        WindowStartupLocation="CenterScreen"
        Background="#0b508c"
        SizeToContent="Height">

	<Border Background="#121212" CornerRadius="0" Padding="0" Margin="0">
		<StackPanel HorizontalAlignment="Center" Width="300">

			<TextBlock Text="Login"
					   FontSize="24"
					   FontWeight="Bold"
					   HorizontalAlignment="Center"
					   Foreground="White"
					   Margin="0,0,0,20"
					   FontFamily="{StaticResource OpenSans}"
					   FontStretch="Condensed" />

			<TextBox x:Name="txtNome"
					 Height="30"
					 Margin="0,0,0,10"
					 Width="280"
					 Style="{StaticResource TextBoxTheme}" />

			<PasswordBox x:Name="txtSenha"
						 Height="30"
						 Margin="0,0,0,20"
						 Width="280"
						 Style="{StaticResource PasswordBoxTheme}" />

			<Button Content="Entrar"
					Width="100"
					Height="30"
					HorizontalAlignment="Center"
					Click="Entrar_Click"
					Style="{StaticResource EditorButtonTheme}" />

		</StackPanel>
	</Border>
</Window>
