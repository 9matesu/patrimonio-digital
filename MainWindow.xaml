<Window x:Class="patrimonio_digital.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:patrimonio_digital"
        xmlns:vm="clr-namespace:patrimonio_digital.MVVM.ViewModel"
        mc:Ignorable="d"
        Title="Patrimonio Digital" Height="600" Width="920" ResizeMode="NoResize"
        Background="#0b508c"
        >

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <!-- Background principal -->
    <Border Background="#f2f2f2" CornerRadius="0,0,20,20">

        <Grid Margin="10,10,10,10">
            <Grid.Effect>
                <DropShadowEffect BlurRadius="4"
                      ShadowDepth="0.01"
                      Direction="100"
                      Opacity="0.3"
                      Color="#80000000"/>
            </Grid.Effect>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="175"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
                
            <!-- Título -->
            <Border Grid.Row="0" Grid.RowSpan="2" 
                    CornerRadius="20 0 0 20" 
                    Background="#ffffff"/>
            
            

            <TextBlock HorizontalAlignment="Center" 
                       Height="auto" TextWrapping="Wrap" 
                       VerticalAlignment="Center" Width="auto"
                       FontSize="15" 
                       FontFamily="{StaticResource OpenSans}" 
                       FontStretch="Condensed" 
                       FontWeight="Thin" 
                       Margin="1,1,1,1"
                       Text="Acervo Museu Major Novaes"/>
           
            
            <!-- Sidebar -->

            <StackPanel Grid.Row="1">

                <Rectangle VerticalAlignment="Top" 
                    Fill="#f2f2f2" Width="Auto" Height="3"/>
                
                <RadioButton x:Name="btnCatalogo" 
                             Command="{Binding AbrirJanelaCommand}" 
                             CommandParameter="Catalogar" 
                             Content= "Catálogo" Tag="Book"  
                             Height="50" FontSize="14" 
                             Style="{StaticResource MenuButtonTheme}"/>
                
                <RadioButton x:Name="btnUsuarios" 
                             Command="{Binding AbrirJanelaCommand}" 
                             CommandParameter="Usuarios" 
                             Content= " Usuários" Tag="User" 
                             Height="50" FontSize="14" 
                             Style="{StaticResource MenuButtonTheme}"/>
                
                <RadioButton x:Name="btnAuditoria" 
                             Command="{Binding AbrirJanelaCommand}" 
                             CommandParameter="Auditoria" 
                             Content= "Auditoria" Tag="Search" 
                             Height="50" FontSize="14" 
                             Style="{StaticResource MenuButtonTheme}"/>

                <RadioButton x:Name="btnExportar" 
                             Content="Exportar Lista" 
                             Tag="Download" 
                             Height="50" FontSize="14" 
                             Style="{StaticResource MenuButtonTheme}"/>
            </StackPanel>
            
            <!-- botão de saída 
            <StackPanel Grid.Column="3">
                <Button Content="" Command="{Binding FecharJanelaCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Template="{StaticResource ExitButton}" Width="25" Height="25" HorizontalAlignment="Right"></Button>
                   
            </StackPanel>
             -->

            
            <!-- Caixa de pesquisa -->
            <StackPanel Grid.Column="1">
            <Border Margin="10 0 0 10"
            CornerRadius="20"
            Background="White"
            HorizontalAlignment="Center"
            Padding="10">
                 <TextBox x:Name="CaixaPesquisa"
                 Tag="Pesquisar usuário"
                 Padding="10 0"
                 Width="700"
                 Height="30"
                 Background="White"
                 BorderThickness="0"
                 VerticalAlignment="Bottom"
                 FontSize="16"
                 FontFamily="{StaticResource OpenSans}"/>
                </Border>
            </StackPanel>


            <!-- listbox provisoria -->
            <StackPanel Grid.Column="1" Grid.Row="2">
                <ListBox Margin="10"
             Width="700"
             Height="300"
             ItemsSource="{Binding Itens}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5">
                                <TextBlock Text="{Binding Nome, StringFormat='Titulo: {0}'}" FontWeight="Bold" FontSize="14"/>
                                <TextBlock Text="{Binding Autor, StringFormat='Autor: {0}'}" FontSize="12" Foreground="Gray"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>


        </Grid>

        
        
    </Border>
</Window>
