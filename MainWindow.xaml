<Window x:Class="patrimonio_digital.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:patrimonio_digital"
        xmlns:vm="clr-namespace:patrimonio_digital.MVVM.ViewModel"
        mc:Ignorable="d"
        Title="Patrimonio Digital" Height="600" Width="920"
        Background="#0b508c" SizeToContent="WidthAndHeight"
        >

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <!-- Background principal -->
    <Border Background="#121212" CornerRadius="0">

        <Grid Margin="3">
            <Grid.Effect>
                <DropShadowEffect BlurRadius="4"
                      ShadowDepth="0.02"
                      Direction="100"
                      Opacity="0.4"
                      Color="#80000000"/>
            </Grid.Effect>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
                
            <!-- Título -->
            <Border Grid.Row="0" Grid.RowSpan="2" 
                    CornerRadius="0" 
                    Background="#3f3f3f"/>

            <Rectangle Fill="Black" Height="3" VerticalAlignment="Bottom"/>

            <TextBlock HorizontalAlignment="Center" 
                       Height="auto" TextWrapping="Wrap" 
                       VerticalAlignment="Center" Width="auto"
                       FontSize="17" 
                       FontFamily="{StaticResource OpenSans}" 
                       FontStretch="Condensed" 
                       FontWeight="Thin" 
                       Margin="10"
                       Text="Acervo Museu Major Novaes"
                       Foreground="White"/>
           
            
            <!-- Sidebar -->

            <StackPanel Grid.Row="1">

               
                
                <RadioButton x:Name="btnCatalogo" 
                             Command="{Binding AbrirJanelaCommand}" 
                             CommandParameter="Catalogar" 
                             Content= "Registrar Item" Tag="Book"  
                             Height="50" FontSize="14" 
                             Style="{StaticResource MenuButtonTheme}"/>
                
                <RadioButton x:Name="btnUsuarios" 
                             Command="{Binding AbrirJanelaCommand}" 
                             CommandParameter="Usuarios" 
                             Content= " Usuários" Tag="User" 
                             Height="50" FontSize="14" 
                             Style="{StaticResource MenuButtonTheme}"/>
                
                <RadioButton x:Name="btnAuditoria" 
                             Command="{Binding AbrirJanelaCommand}" 
                             CommandParameter="Auditoria" 
                             Content= "Auditoria" Tag="Search" 
                             Height="50" FontSize="14" 
                             Style="{StaticResource MenuButtonTheme}"/>

            </StackPanel>
            
            <!-- botão de saída 
            <StackPanel Grid.Column="3">
                <Button Content="" Command="{Binding FecharJanelaCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Template="{StaticResource ExitButton}" Width="25" Height="25" HorizontalAlignment="Right"></Button>
                   
            </StackPanel>
             -->

            
            <!-- Caixa de pesquisa -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10 0 10 0">
            

                    <TextBox x:Name="CaixaPesquisa"
                     Text="{Binding TextoPesquisa, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource TextBoxTheme}"
                     Height="30"
                     FontFamily="{StaticResource OpenSans}"/>

 
            </StackPanel>


            <!-- listbox -->
            
            <StackPanel Grid.Column="1" Grid.Row="2">
                <Border Margin="10 0 10 0"
            CornerRadius="12"
            Background="#3f3f3f"
            Width="Auto"
            HorizontalAlignment="Center"
            Padding="0">

                    <ListBox Margin="10"
                     Width="Auto"
                     Height="500"
                     HorizontalAlignment="Center"
                     Background="#3f3f3f"
                     ItemsSource="{Binding ItensView}" BorderBrush="#FF3F3F3F">

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="10" Margin="5" CornerRadius="5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <!-- dados -->
                                        <ColumnDefinition Width="Auto" />
                                        <!-- botão -->
                                    </Grid.ColumnDefinitions>

                                    <StackPanel  Grid.Column="0" Width="600" HorizontalAlignment="Center" Cursor="Hand">

                                            <StackPanel.InputBindings>
                                                <MouseBinding MouseAction="LeftClick"
                                                 Command="{Binding DataContext.AbrirEditorCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                 CommandParameter="{Binding}" />
                                             </StackPanel.InputBindings>
                                        
                                            <TextBlock Text="{Binding Nome}" FontWeight="Bold" FontSize="14" Foreground="White" FontFamily="Open Sans"/>
                                            <TextBlock Text="{Binding Autor, StringFormat='Autoria: {0}'}" FontSize="12" Foreground="LightGray" FontFamily="Open Sans"/>
                                            <TextBlock Text="{Binding Data, StringFormat='Data: {0}'}" FontSize="12" Foreground="LightGray" FontFamily="Open Sans"/>
                                            <TextBlock Text="{Binding Origem, StringFormat='Origem: {0}'}" FontSize="12" Foreground="LightGray" FontFamily="Open Sans"/>
                                            <TextBlock Text="{Binding Tipo, StringFormat='Tipo: {0}'}" FontSize="12" Foreground="LightGray" FontFamily="Open Sans"/>
                                            <TextBlock Text="{Binding EstadoCons, StringFormat='Estado de Conservação: {0}'}" FontSize="12" Foreground="LightGray" FontFamily="Open Sans"/>
                                            <TextBlock Text="{Binding SetorFisico, StringFormat='Setor Físico: {0}'}" FontSize="12" Foreground="LightGray" FontFamily="Open Sans"/>
                                    </StackPanel>

                                    <Button Grid.Column="1"
                                Content="🗑"
                                Command="{Binding DataContext.ExcluirItemCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                CommandParameter="{Binding}"
                                Background="Transparent"
                                Foreground="White"
                                FontWeight="Bold"
                                Width="30"
                                Height="30"
                                Margin="15,0,0,0"
                                VerticalAlignment="Top"
                                Cursor="Hand"
                                ToolTip="Excluir item"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                </Border>
            </StackPanel>



        </Grid>

        
        
    </Border>
</Window>
