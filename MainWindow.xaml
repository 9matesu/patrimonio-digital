<Window x:Class="patrimonio_digital.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:patrimonio_digital"
        mc:Ignorable="d"
        Title="Patrimonio Digital" Height="600" Width="920" ResizeMode="NoResize"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        >

    <Border Background="#f2f2f2" CornerRadius="20">


        <Grid Margin="10,10,10,10">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition/>
            </Grid.RowDefinitions>


            <TextBlock HorizontalAlignment="Left" Height="55" TextWrapping="Wrap" VerticalAlignment="Top" Width="168" FontSize="22" FontFamily="Bahnschrift" FontStretch="Condensed" Margin="22,20,0,0"><Run Language="pt-br" Text="Acervo Major Novaes"/></TextBlock>
            
            <StackPanel Grid.Row="1">
                <RadioButton Content="Catálogo" Height="50" FontSize="14" Style="{StaticResource MenuButtonTheme}"/>
                <RadioButton Content="Usuários" Height="50" FontSize="14" Style="{StaticResource MenuButtonTheme}"/>
                <RadioButton Content="Auditoria" Height="50" FontSize="14" Style="{StaticResource MenuButtonTheme}"/>
                <RadioButton Content="Exportar Lista" Height="50" FontSize="14" Style="{StaticResource MenuButtonTheme}"/>
                
                
                
                
            </StackPanel>
        </Grid>

        
        
    </Border>
</Window>
